<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bottlebattle.bottlebattle">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_bottle_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bottle_logo_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.RecycleItemActivities.ScanningBarcodeActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.StatsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.ItemRecycledActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.ForgotPasswordActivities.ResetPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.ForgotPasswordActivities.ForgotPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.GetCityActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.AddFriendsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.LevelProgressActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.UserRankingsActivity.UserRankingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.RecycleItemActivities.RecycleItemActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.HomeScreenActivity.HomeScreenActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.RegistrationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bottlebattle.bottlebattle.Activities.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="barcode" />
