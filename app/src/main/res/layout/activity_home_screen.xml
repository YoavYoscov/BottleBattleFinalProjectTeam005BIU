<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_screen_background"
    tools:context="com.bottlebattle.bottlebattle.Activities.HomeScreenActivity.HomeScreenActivity">

    <TextView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/home"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="22dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home" />

    <LinearLayout
        android:id="@+id/greeting_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@+id/home">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/username_homeScreen"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeMinTextSize="11sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textColor="#71D15C"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintBottom_toTopOf="@+id/statusText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting_user">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/menuViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="60dp"/>
        <LinearLayout
            android:id="@+id/menuDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:layout_gravity="bottom"
            android:paddingBottom="40dp">
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/menu_dot_dark"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/menu_dot"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/menu_dot"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/menu_dot"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/menu_dot"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/menu_dot"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/menu_dot"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </FrameLayout>


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/podium_outline_svg"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toStartOf="@+id/statusText"
        android:layout_marginBottom="9dp"
        android:contentDescription="@string/ranks_logo" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_status"
        android:textColor="#B3B3B3"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="7dp"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/moneyText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>
            <TextView
                android:id="@+id/tableLevelCategory"
                android:padding="3dip"
                android:text="@string/current_level"
                android:textColor="#454545"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tableLevelValue"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#454545"
                android:textSize="17sp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tablePointsCategory"
                android:padding="3dip"
                android:text="@string/current_points"
                android:textColor="#454545"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tablePointsValue"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#454545"
                android:textSize="17sp"/>
        </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/money_svg"
        app:layout_constraintBottom_toBottomOf="@+id/moneyText"
        app:layout_constraintEnd_toStartOf="@+id/moneyText"
        android:contentDescription="@string/coins_logo" />

    <TextView
        android:id="@+id/moneyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/so_far_you_ve_saved_through_recycling"
        android:textAlignment="center"
        android:textColor="#B3B3B3"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/moneyAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="7dp"/>

    <TextView
        android:id="@+id/moneyAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textColor="#454545"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>